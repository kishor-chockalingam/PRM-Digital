<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listItemFormHeight"
    android:minHeight="@dimen/listItemFormHeight" >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/marginPseudoSpinnerBottom"
        android:layout_marginLeft="@dimen/marginEditTextLeftAndRight"
        android:layout_marginRight="@dimen/marginEditTextLeftAndRight"
        android:background="@drawable/spinner_dropdown" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="13dp"
        android:layout_marginLeft="@dimen/marginMainLeftAndRight"
        android:layout_marginRight="@dimen/marginMainLeftAndRight"
        android:clickable="false"
        android:textColor="@color/editTextHint"
        android:textSize="@dimen/textSizeMedium" >
    </TextView>

</RelativeLayout>